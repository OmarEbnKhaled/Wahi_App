<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wahi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darkerGreen</item>
        <item name="android:navigationBarColor">@color/darkerGreen</item>

        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:textColorHighlight">@color/transGray</item>

        <item name="android:windowBackground">@color/black</item>

        <item name="android:windowActivityTransitions">true</item>

    </style>

</resources>